<div class="d-block">
    {% for related_path, score in related_pages %}
        {% set related = grav['pages'].get(related_path) %}
        {% if related %}
            <a class="btn btn-outline-primary mb-1" href="{{ related.url }}" title="{{ related.title }}">
                {% if config.plugins.relatedpages.show_score %}
                    <span class="badge badge-danger badge-pill">{{ score }}</span>
                {% endif %}
                {{ related.title }}
            </a>
        {% endif %}
    {% endfor %}
</div>